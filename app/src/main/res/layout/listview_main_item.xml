<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <com.panghaha.it.easymenulistviewdemo.PercentCircle
                android:id="@+id/pencentCircle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                app:radius="63"
                app:circleBackground="#00000000"
                app:ringColor="#ffffff"
                app:textColor="#ffffff"
                />
            <ImageView
                android:id="@+id/blackring"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="5dp"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ring"/>

            <ImageView
                android:id="@+id/renwutishi_red"
                android:visibility="invisible"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/blackring"
                android:src="@drawable/icon_left_bar_tixing3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_toRightOf="@id/pencentCircle"
                android:id="@+id/linyout"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title_list"
                    android:textSize="14sp"
                    android:text="八百标兵奔北坡..."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/text_persion_list"
                    android:textSize="11sp"
                    android:text="王大锤"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"/>


            </LinearLayout>
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:id="@+id/text_time_list"
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@id/text_time_list"
                    android:layout_marginLeft="2dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:id="@+id/text_day_list"
                    android:text="天"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/zhiding_item"
                    android:layout_marginLeft="20dp"
                    android:visibility="invisible"
                    android:textSize="13sp"
                    android:layout_marginTop="25dp"
                    android:background="@color/huise"
                    android:text="置顶"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_marginLeft="25dp"
                android:layout_alignParentBottom="true"
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:background="#ffffff"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>